<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:id="@+id/level_scrollview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


        <LinearLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

            <TextView android:text="Beginners"  style="@style/TextTitle" />


            <GridView android:id="@+id/level_grid1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

            <TextView android:text="Experts"  style="@style/TextTitle" />

            <GridView android:id="@+id/level_grid2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
