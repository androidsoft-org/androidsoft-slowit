<?xml version="1.0" encoding="UTF-8"?>
<HorizontalScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/level_scrollview"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                >

    <LinearLayout
    android:background="@drawable/background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    >

        <LinearLayout android:layout_width="600dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" 
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp"
                    >

            <TextView android:text="@string/grid1_title"  style="@style/TextTitle" />


            <GridView android:id="@+id/level_grid1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>
                    
        </LinearLayout>

        <LinearLayout android:layout_width="600dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" 
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp"
                    >

            <TextView android:text="@string/grid2_title"  style="@style/TextTitle" />

            <GridView android:id="@+id/level_grid2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

        </LinearLayout>

        <LinearLayout android:layout_width="600dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" 
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp"
                    >

            <TextView android:text="@string/grid3_title"  style="@style/TextTitle" />

            <GridView android:id="@+id/level_grid3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:padding="5dp"
                    android:verticalSpacing="5dp"
                    android:horizontalSpacing="5dp"
                    android:numColumns="auto_fit"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:gravity="center"/>

        </LinearLayout>
    
  
    </LinearLayout>
</HorizontalScrollView>